<p id="notice"><%= notice %></p>


<body>

<header>
  <h1>JobSeeker</h1>
</header>
<div class="boxContainer">
	<div class="box"><p class="comp_list">選考中企業</p>
    <table>
      <thead>
        <tr>
          <th>企業名</th>
          <th>次回選考</th>
          <th>服装</th>
          <th>日時</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.condition %></td>
            <td><%=#服装画像表示
              if event.clothe=='suit'
                 image_tag '/images/icon.png' , :size => '25x28'
              else
                 image_tag '/images/icon2.png' , :size => '25x28'
              end
              %></td>
            <td><%=#日付部分だけ表示
                 a=event.start.to_s
                 a.gsub!(/-/,'/')
                 a[5,5]
                %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="plus_icon">
    <%= link_to image_tag('/images/plus.png' , :size => '50x50'),controller: 'events', action: 'new'%>
  </div>
  </div>
	<div id="calendar" class="calendar"></div>
</div>

</body>
